<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @language do |f| %>


  <div class="field">
    <%= f.label :post_name %>
    <%= f.text_field :post_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :grade %>
    <%= f.text_field :grade, :size => 30 %>
  </div>

    <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image, :size => 30 %>
  </div>


  <div class="field">
    <%= f.label :about  %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>
  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", languages_path %>

